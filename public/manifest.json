{
  "short_name": "Wisdoom",
  "name": "Wisdoom",
  "description": "Inject knowledge everywhere",
  "author": "nhannht",
  "manifest_version": 3,
  "version": "1.0.4",
  "icons": {
    "16": "icons/larva-meditation128.png",
    "48": "icons/larva-meditation128.png",
    "128": "icons/larva-meditation128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "storage",
    "downloads",
    "clipboardWrite",
    "tabs",
    "scripting"
  ]
}
